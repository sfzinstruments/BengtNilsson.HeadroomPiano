//midi cc
#define $M_VOL 7
#define $M_PAN 10
#define $M_WID 40
#define $DAMPER 67
#define $RELEASE 72
#define $VELTRACK 73
#define $C_VOL 74
#define $C_PAN 75
#define $D_VOL 77
